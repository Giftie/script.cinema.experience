<window>
    <animation effect="fade" time="250">WindowOpen</animation>
    <animation effect="fade" time="250">WindowClose</animation>
    <controls>
        <control type="image">  <!-- Main window -->
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture>ce_black.png</texture>
            <visible>!Player.HasVideo</visible>
        </control>
        <control type="videowindow" id="32000">
            <description>Simulated full screen video</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <visible>true</visible>
        </control>
    </controls>
 </window>
